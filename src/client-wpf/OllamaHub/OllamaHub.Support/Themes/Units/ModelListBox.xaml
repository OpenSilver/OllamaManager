<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:OllamaHub.Support.UI.Units">

    <Style TargetType="units:ModelListBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:ModelListBox}">
                    <Border Background="{DynamicResource SectionBackgroundColor}" 
                            CornerRadius="16" 
                            BorderBrush="{DynamicResource BorderColor}" 
                            BorderThickness="1">
                        <StackPanel>
                            <Border BorderBrush="{DynamicResource BorderColor}" 
                                    BorderThickness="0,0,0,1" 
                                    Padding="24,16,24,16">
                                <TextBlock Text="Model Management" 
                                           FontSize="18" 
                                           FontWeight="Bold" 
                                           Foreground="{DynamicResource TextPrimaryColor}"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <ItemsPresenter Margin="0 0 0 36"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>