<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:units="clr-namespace:OllamaHub.Support.UI.Units">

  <Style TargetType="units:AIMessageListBoxItem">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="units:AIMessageListBoxItem">
          <Border Background="Transparent" Padding="0,8">
            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup x:Name="MessageTypeStates">
                <VisualState x:Name="Normal">
                  <Storyboard>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MessageBorder" Storyboard.TargetProperty="Background">
                      <DiscreteObjectKeyFrame KeyTime="0" Value="{DynamicResource SectionBackgroundColor}"/>
                    </ObjectAnimationUsingKeyFrames>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MessageBorder" Storyboard.TargetProperty="CornerRadius">
                      <DiscreteObjectKeyFrame KeyTime="0">
                        <DiscreteObjectKeyFrame.Value>
                          <CornerRadius>16,16,16,4</CornerRadius>
                        </DiscreteObjectKeyFrame.Value>
                      </DiscreteObjectKeyFrame>
                    </ObjectAnimationUsingKeyFrames>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MessageText" Storyboard.TargetProperty="FontFamily">
                      <DiscreteObjectKeyFrame KeyTime="0">
                        <DiscreteObjectKeyFrame.Value>
                          <FontFamily>Segoe UI</FontFamily>
                        </DiscreteObjectKeyFrame.Value>
                      </DiscreteObjectKeyFrame>
                    </ObjectAnimationUsingKeyFrames>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MessageText" Storyboard.TargetProperty="FontSize">
                      <DiscreteObjectKeyFrame KeyTime="0">
                        <DiscreteObjectKeyFrame.Value>
                          <system:Double>14</system:Double>
                        </DiscreteObjectKeyFrame.Value>
                      </DiscreteObjectKeyFrame>
                    </ObjectAnimationUsingKeyFrames>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MessageText" Storyboard.TargetProperty="Foreground">
                      <DiscreteObjectKeyFrame KeyTime="0" Value="{DynamicResource TextPrimaryColor}"/>
                    </ObjectAnimationUsingKeyFrames>
                  </Storyboard>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>

            <StackPanel Orientation="Horizontal"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,16">
              <Border Width="40" Height="40"
                      CornerRadius="20"
                      Background="{DynamicResource PurpleGradient}"
                      VerticalAlignment="Bottom"
                      Margin="0,0,12,0">
                <Path Data="{DynamicResource BotIcon}"
                      Fill="White"
                      Stretch="Uniform"
                      Width="20" Height="20"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
              </Border>

              <StackPanel MaxWidth="400">
                <Border x:Name="MessageBorder"
                        Background="{DynamicResource SectionBackgroundColor}"
                        CornerRadius="16,16,16,4"
                        Padding="16,12,16,12">
                  <TextBlock x:Name="MessageText"
                            Text="{Binding Content}"
                            FontSize="14"
                            Foreground="{DynamicResource TextPrimaryColor}"
                            TextWrapping="Wrap"/>
                </Border>
              </StackPanel>
            </StackPanel>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

</ResourceDictionary>